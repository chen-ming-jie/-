.cir{
  width: 206px;
  height: 205px;
  margin: 0 auto;
  position: relative;
}
.picUrl{
  height: 60%;
  width: 60%;
  border-radius: 50%;
  position: relative;
  left: 20%;
  top: 20%;
  animation: rotate 30s linear infinite;
}
/* 旋转动画 */
@keyframes rotate{
  to{
    transform: rotate(360deg);
  }
}
.msk{
  height: 100%;
  width: 100%;
  background-image: url("https://music.163.com/style/web2/img/coverall.png?b499a60%E2%80%A6");
  background-position: -140px -580px;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
}
.msk .controll{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
