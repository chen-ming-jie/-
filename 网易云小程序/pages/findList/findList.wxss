.searchBox{
  width: 600rpx;
  height: 70rpx;
  margin-left: 75rpx;
  border-radius: 15px;
  padding-left: 10px;
  border: 1px solid #999;
  position: relative;
  box-sizing: border-box;
  padding-left: 30px;
  margin-top: 15px;
}
.placeholder{
  font-size: 26rpx;
}
.searchIcon{
  position: absolute;
  z-index: 1;
  left: 6px;
  top: 5px;
}
.delete{
  position: absolute;
  width: 15px;
  height: 15px;
  right: 15px;
  top: 7px;
}
