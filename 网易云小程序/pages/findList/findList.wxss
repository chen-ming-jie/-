.hotSearch .hothead{
  width: 150rpx;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #eee;
  border-bottom: 1rpx solid #ccc;
  border-radius: 8px;
  margin-top: 10px;
  margin-left: 15px;
}

.hotlist{
  display: flex;
  flex-wrap: wrap;
  margin-left: 25px;
}

.hotItem{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.hotItem .num{
  margin: 0 10rpx;
}

.hotItem .iconImg{
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
